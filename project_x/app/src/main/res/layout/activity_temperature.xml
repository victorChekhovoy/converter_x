<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.project_x.Temperature">

    <Spinner
        android:text = "select a type"
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:id="@+id/from_type_t" />

    <TextView
        android:gravity="center"
        android:id="@+id/textView2_t"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:background="@drawable/rectangle"
        android:hint="result"
        android:text="" />

    <EditText
        android:background="@drawable/rectangle"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:inputType="textPersonName"
        android:layout_marginTop="48dp"
        android:id="@+id/editText_t"
        android:selectAllOnFocus="true"
        android:hint="enter number"
        android:textAlignment="center"
        android:layout_below="@+id/from_type_t"
        android:layout_alignLeft="@+id/textView2_t"
        android:layout_alignStart="@+id/textView2_t"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_above="@+id/textView2_t"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:id="@+id/spinner_t"/>
    <Button
        android:text="RUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/run_t" />



</RelativeLayout>
