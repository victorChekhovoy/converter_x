<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_length"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.example.user.project_x.Length">

    <Spinner
        android:text = "select a type"
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:id="@+id/from_type_l" />

    <TextView
        android:id="@+id/textView2_l"
        android:layout_width="120pt"
        android:layout_height="15pt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint="result"
        android:textSize="20sp"
        android:text="" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_above="@+id/textView2_l"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:id="@+id/spinner_l"/>

    <EditText
        android:background="@drawable/rectangle"
        android:layout_width="120pt"
        android:layout_height="15pt"
        android:inputType="textPersonName"
        android:layout_marginTop="49dp"
        android:id="@+id/editText_l"
        android:selectAllOnFocus="true"
        android:hint="enter number"
        android:textSize="23sp"
        android:textAlignment="center"
        android:layout_below="@+id/from_type_l"
        android:layout_alignLeft="@+id/textView2_l"
        android:layout_alignStart="@+id/textView2_l" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50pt"
        android:layout_height="50pt"
        app:srcCompat="@drawable/length"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
