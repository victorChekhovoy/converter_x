<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_area"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.example.user.project_x.Length">

    <Spinner
        android:id="@+id/from_type_l"
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/gradient_spinner"
        android:text="select a type" />

    <HorizontalScrollView
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:id="@+id/scrollView"
        android:layout_width="130pt"
        android:layout_height="25pt"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/textView2_l"
            android:layout_width="130pt"
            android:layout_height="25pt"
            android:layout_marginBottom="140dp"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:hint="result"
            android:scrollHorizontally="true"
            android:textSize="36sp" />
    </HorizontalScrollView>

    <Spinner
        android:id="@+id/spinner_l"
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_above="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="@drawable/gradient_spinner" />

    <EditText
        android:id="@+id/editText_l"
        android:background="@drawable/rectangle"
        android:layout_width="130pt"
        android:layout_height="25pt"
        android:inputType="textPersonName"
        android:layout_marginTop="41dp"
        android:selectAllOnFocus="true"
        android:hint="enter number"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_below="@+id/from_type_l"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignStart="@+id/scrollView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55pt"
        android:layout_height="55pt"
        app:srcCompat="@drawable/length"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

